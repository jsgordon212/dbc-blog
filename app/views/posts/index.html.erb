<% @latest.each do |post| %>
  <div id="posts_show_content" class="skinny_wrapper wrapper_padding">
   <header>
     <p class="posted_by">posted by <%= post.user.username %></p>
     <h1><a id="index_title" href="/posts/<%= post.id %>"><%= post.title %></a></h1>
     <hr>
    </header>
    <div id="content">
      <p><%= post.content.split[0..100].join(" ") %></p>
    </div>
  </div>
<% end %>