<div id="content">
  <% if @post %>
    <h2><%= @post.title %></h2>
   		<p><%= @post.text %></p>
   		<% if current_user==@post.user %>
   			<nav id='post-options'>
   				<%= link_to 'Edit', edit_post_path(@post) %> |
  				<%= link_to 'Delete ', @post,
                 method: :delete,
                 data: { confirm: 'Are you sure?' } %>
  			</nav>
  		<% end %>
    <div>
    	<section id='add-comment'><%= render @post.comments %></section>
  		<h4>Add a comment:</h4>
  		<span><%= render 'comments/form' %></span>
    </div>	
  <% end %>

</div>
